<h1>Sign Up</h1>
<br><br>

<div class='center'>
  <% if notice %>
    <%= flash[:notice].html_safe unless flash[:notice].blank? %>
    <br><br>
  <% end %>

  <% if alert %>
    <%= flash[:alert].html_safe unless flash[:alert].blank? %>
    <br><br>
  <% end %>

  <%= form_for @user, url: { action: 'create' } do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :email %><br>
    <%= f.email_field :email%><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password%><br><br>
    <%# TODO: Need to add a password confirmation field %>
    <%= label_tag :account_token, "Account Token" %><br>
    <%= text_field_tag :account_token, nil, placeholder: "Leave blank if unknown" %><br><br>
    <%= f.submit %>
  <% end %>
</div>