<h1>Log In</h1>
<br><br>

<div class='center'>
  <% if notice %>
    <%= flash[:notice].html_safe unless flash[:notice].blank? %>
    <br><br>
  <% end %>

  <% if alert %>
    <%= flash[:alert].html_safe unless flash[:alert].blank? %>
    <br><br>
  <% end %>

  <%= form_for @user, url: { action: 'signin' } do |f| %>
    <%= f.label :email %><br>
    <%= f.email_field :email%><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password%><br><br>
    <%= f.submit 'Sign In'%>
  <% end %>
</div>