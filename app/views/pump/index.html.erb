<h1>Pump</h1>

<div class='center'>
  <% @pumps.each do |p| %>
    <fieldset>
      <%= p.created_at.strftime("%a %B %H, %Y") %><br>
      <%= p.pump_time %><br>
      <%= p.amount %> ounces
    </fieldset>
    <br><br>
  <% end %>

  <%= render partial: 'form' %>

  <br><br>
  <%= link_to 'Back', user_index_path %>
</div>
